<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Control Panel Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CC000000"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <!-- Status Display -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="准备就绪"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="#40000000"
            android:padding="12dp"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/intervalTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="间隔时间 (秒)"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:background="@drawable/input_field_background"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/numShotsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="拍摄张数"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:background="@drawable/input_field_background"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/startButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="开始拍摄"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:layout_marginEnd="6dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="停止拍摄"
                android:textColor="#FFFFFF"
                android:background="@drawable/stop_button_background"
                android:layout_marginStart="6dp"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Camera Settings Button -->
        <Button
            android:id="@+id/cameraSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="相机设置"
            android:textColor="#FFFFFF"
            android:background="@drawable/camera_settings_button_background"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <!-- Reset Configuration Button -->
        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="重置为默认值"
            android:textColor="#FFFFFF"
            android:background="@drawable/reset_button_background"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</RelativeLayout>
